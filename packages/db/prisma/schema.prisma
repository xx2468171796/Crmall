generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["multiSchema"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
  schemas  = ["auth", "public", "plane", "nocodb", "midday", "medusa", "classroomio", "appflowy"]
}

// ============================================================
// 第一层: SaaS 租户 (购买系统的客户)
// ============================================================

model Tenant {
  id          String       @id @default(cuid())
  name        String
  code        String       @unique
  logo        String?
  plan        TenantPlan   @default(TRIAL)
  status      TenantStatus @default(ACTIVE)
  maxUsers    Int          @default(50)
  expiresAt   DateTime?
  group       Group?
  users       User[]
  createdAt   DateTime     @default(now())
  updatedAt   DateTime     @updatedAt

  @@schema("auth")
}

enum TenantPlan {
  TRIAL
  BASIC
  PRO
  ENTERPRISE

  @@schema("auth")
}

enum TenantStatus {
  ACTIVE
  SUSPENDED
  EXPIRED

  @@schema("auth")
}

// ============================================================
// 第二层: 集团 (租户内唯一)
// ============================================================

model Group {
  id        String    @id @default(cuid())
  tenantId  String    @unique
  tenant    Tenant    @relation(fields: [tenantId], references: [id], onDelete: Cascade)
  name      String
  companies Company[]
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt

  @@schema("auth")
}

// ============================================================
// 第三层: 公司
// ============================================================

model Company {
  id          String        @id @default(cuid())
  tenantId    String
  groupId     String
  group       Group         @relation(fields: [groupId], references: [id], onDelete: Cascade)
  name        String
  code        String
  logo        String?
  status      CompanyStatus @default(ACTIVE)
  departments Department[]
  createdAt   DateTime      @default(now())
  updatedAt   DateTime      @updatedAt

  @@unique([tenantId, code])
  @@index([tenantId])
  @@schema("auth")
}

enum CompanyStatus {
  ACTIVE
  INACTIVE

  @@schema("auth")
}

// ============================================================
// 第四层: 部门
// ============================================================

model Department {
  id        String       @id @default(cuid())
  tenantId  String
  companyId String
  company   Company      @relation(fields: [companyId], references: [id], onDelete: Cascade)
  parentId  String?
  parent    Department?  @relation("DeptTree", fields: [parentId], references: [id])
  children  Department[] @relation("DeptTree")
  name      String
  code      String?
  sortOrder Int          @default(0)
  teams     Team[]
  createdAt DateTime     @default(now())
  updatedAt DateTime     @updatedAt

  @@index([tenantId])
  @@index([companyId])
  @@schema("auth")
}

// ============================================================
// 第五层: 小组
// ============================================================

model Team {
  id           String     @id @default(cuid())
  tenantId     String
  companyId    String
  departmentId String
  department   Department @relation(fields: [departmentId], references: [id], onDelete: Cascade)
  name         String
  leaderId     String?
  sortOrder    Int        @default(0)
  employees    Employee[]
  createdAt    DateTime   @default(now())
  updatedAt    DateTime   @updatedAt

  @@index([tenantId])
  @@index([companyId])
  @@schema("auth")
}

// ============================================================
// 第六层: 员工
// ============================================================

model Employee {
  id           String         @id @default(cuid())
  tenantId     String
  companyId    String
  userId       String         @unique
  user         User           @relation(fields: [userId], references: [id], onDelete: Cascade)
  teamId       String
  team         Team           @relation(fields: [teamId], references: [id], onDelete: Cascade)
  employeeNo   String
  position     String?
  status       EmployeeStatus @default(ACTIVE)
  joinDate     DateTime?
  leaveDate    DateTime?
  createdAt    DateTime       @default(now())
  updatedAt    DateTime       @updatedAt

  @@unique([tenantId, employeeNo])
  @@index([tenantId])
  @@index([companyId])
  @@schema("auth")
}

enum EmployeeStatus {
  ACTIVE
  INACTIVE
  PROBATION

  @@schema("auth")
}

// ============================================================
// 用户与认证
// ============================================================

model User {
  id            String    @id @default(cuid())
  tenantId      String?
  tenant        Tenant?   @relation(fields: [tenantId], references: [id])
  email         String    @unique
  emailVerified DateTime?
  name          String?
  image         String?
  passwordHash  String?
  isPlatformAdmin Boolean @default(false)
  accounts      Account[]
  sessions      Session[]
  employee      Employee?
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  @@index([tenantId])
  @@schema("auth")
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  user              User    @relation(fields: [userId], references: [id], onDelete: Cascade)
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt

  @@unique([provider, providerAccountId])
  @@schema("auth")
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  expires      DateTime
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  @@schema("auth")
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
  @@schema("auth")
}

// ============================================================
// 数据范围枚举
// ============================================================

enum DataScope {
  PLATFORM
  GROUP
  COMPANY
  DEPARTMENT
  TEAM
  SELF

  @@schema("auth")
}
