{
  "name": "twcrm",
  "version": "0.1.0",
  "private": true,
  "description": "台湾智能家居 CRM 系统 — 集团总部 + 多子公司",
  "packageManager": "pnpm@10.30.2",
  "engines": {
    "node": ">=24.0.0",
    "pnpm": ">=10.0.0"
  },
  "scripts": {
    "dev": "turbo dev",
    "build": "turbo build",
    "lint": "turbo lint",
    "type-check": "turbo type-check",
    "db:generate": "pnpm --filter @twcrm/db generate",
    "db:push": "pnpm --filter @twcrm/db push",
    "db:migrate": "pnpm --filter @twcrm/db migrate",
    "db:studio": "pnpm --filter @twcrm/db studio",
    "db:seed": "pnpm --filter @twcrm/db seed",
    "clean": "turbo clean && rimraf node_modules",
    "format": "prettier --write \"**/*.{ts,tsx,md,json}\""
  },
  "pnpm": {
    "onlyBuiltDependencies": [
      "@parcel/watcher",
      "@prisma/engines",
      "@swc/core",
      "esbuild",
      "prisma",
      "sharp"
    ]
  },
  "devDependencies": {
    "prettier": "^3.8.1",
    "rimraf": "^6.1.3",
    "turbo": "^2.8.10",
    "typescript": "^5.9.3"
  }
}
